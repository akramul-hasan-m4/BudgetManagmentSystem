<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.dolphin.budgetmanagmentsystem.Budget">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Budget Planing"
        android:textColor="#194e0c"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/bcatagory"
        android:layout_width="match_parent"
        android:textColor="#317c1b"
        android:layout_height="wrap_content"
        android:hint="Enter Budget category"
        android:textStyle="italic" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/startDate"
            android:text="Start Date"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/startDateText"

            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#317c1b"
            android:hint="Enter start date"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/endDate"
            android:text="Start Date"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/endDateText"
            android:enabled="false"
            android:layout_width="match_parent"
            android:textColor="#317c1b"
            android:layout_height="wrap_content"
            android:hint="Enter End date"
            android:textStyle="italic" />

    </LinearLayout>



    <EditText
        android:id="@+id/budgetamount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#317c1b"
        android:inputType="number"
        android:hint="Enter Amount"
        android:textStyle="italic" />


    <Button
        android:id="@+id/budgetsubmit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn"
        android:text="Submit"
        android:textColor="#f7f5f5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="left|bottom">

        <Button
            android:id="@+id/beBack"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Back"
            android:textColor="#bc2626"
            android:textSize="10sp" />
    </LinearLayout>


</LinearLayout>
